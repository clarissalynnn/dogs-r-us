<div class="container mt-4">
  <div class="row fs-5">
    <!-- Owner's Profile -->
    <div class="col-md-6">
      <%# Owner's Profile %>
      <div class="card mb-4">
        <div class="card-body">
          <% if @user.photos? %>
            <%= image_tag(@user.photos, class: "card-img-top mb-3", style: "width:100%; height:450px; object-fit: cover;") %>
          <% end %>
          <h2 class="card-title"><%= "#{@user.first_name} #{@user.last_name}" %></h2>
          <p class="card-text">Email: <%= @user.email %></p>
          <div class="d-grid gap-2">
            <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-primary" %>
            <%= link_to "Add Dog", new_dog_path, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>

    <!-- User's Dogs -->
    <div class="col-md-6">
      <h2>My Dogs:</h2>
      <% if @user.dogs.present? %>
        <% @user.dogs.each do |dog| %>
          <div class="col-md-12">
            <%= render 'dogs/card', dog: dog %>
          </div>
        <% end %>
      <% else %>
        <p>No dogs found.</p>
      <% end %>
    </div>
  </div>
</div>
