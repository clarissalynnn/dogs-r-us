<%= link_to dog_path(@dog), style:"font-size: 30px; color:black" do %>
  <i class="fa-solid fa-arrow-left"></i>
<% end %>
<h1 class="text-center mt-5">New Booking ðŸ¦®</h1>

<div class="container mx-auto mt-3" style="max-width: 50%;">
<%= simple_form_for [@dog, @booking] do |f| %>
  <% if @ongoing_bookings < 3 %>
    <%= f.input :start_date, as: :string, input_html: { data: { controller: "datepicker" } } %>
    <%= f.input :end_date, as: :string, input_html: { data: { controller: "datepicker" } } %>
    <div class="text-center">
      <%= f.submit "Place Booking", class: "btn btn-primary w-100" %>
    </div>
  <% else %>
    <h3 class="text-center my-3">Sorry, you've reached the limit of 3 ongoing bookings</h3>
    <%= f.input :start_date, as: :string, input_html: {type: 'date', class: "form-control", disabled: true} %>
    <%= f.input :end_date, as: :string, input_html: {type: 'date', class: "form-control", disabled: true}  %>
    <div class="text-center">
      <%= f.submit "Place Booking", class: "btn btn-primary w-100", disabled: true %>
    </div>
  <% end %>
<% end %>
</div>
