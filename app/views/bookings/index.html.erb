<div class="container mt-5">
  <h1><%=@user.first_name %>'s bookings ðŸ¦® :</h1>
  <div class="row">
    <% @bookings.each do |booking| %>
    <div class="col-sm-4">
      <div class="card mt-5 flex-wrap" style="width: 100%; height: 100%;">
        <img src="<%=booking.dog.photos%>" class="card-img-top" alt="Dog photo" style="object-fit: cover; width: 100%; height: 200px;">
        <div class="card-body">
          <h5 class="card-title"><%=booking.dog.name%></h5>
          <p class="card-text"><%=booking.dog.breed%></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Foster starts: <%=booking.start_date%></li>
          <li class="list-group-item">Foster ends: <%=booking.end_date%></li>
        </ul>
        <div class="card-body">
          <%= link_to "Edit Booking",booking_path(booking) %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
