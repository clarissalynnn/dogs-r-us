<div class="container mt-5">
  <div class="index-header d-flex justify-content-between">
  <h1><%=@user.first_name %>'s bookings ðŸ¦® :</h1>
  <button class="btn btn-info rounded"><%= link_to "See more dogs", root_path, style: "text-decoration:none; color: black;" %></button>
  </div>
  <div class="row">
    <% @bookings.each do |booking| %>
    <div class="col-sm-4">
      <div class="card mt-5 flex-wrap" style="width: 100%; height: 100%;">
        <img src="<%=booking.dog.photos%>" class="card-img-top" alt="Dog photo" style="object-fit: cover; width: 100%; height: 200px;">
        <div class="card-body">
          <h3 class="card-title text-center"><%=booking.dog.name%></h3>
          <h4 class="card-text text-center"><%=booking.dog.breed%></h4>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item text-center">Foster starts: <%=booking.start_date%></li>
          <li class="list-group-item text-center">Foster ends: <%=booking.end_date%></li>
        </ul>
        <div class="card-body">
          <button class="btn btn-primary rounded w-100"><%= link_to "See booking details", booking_path(booking),
            style: "text-decoration:none; color: white;"%></button>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
