<div class="container">
  <div data-controller="toggle-filter">
    <button data-action="click->toggle-filter#fire" class="btn btn-outline-primary">Filter <i class="fa-solid fa-filter"></i></button>
    <div data-toggle-filter-target="toggleableElement">
    <h5><strong>Filter by breed:</strong></h5>
      <%= render "form" %>
    </div>
  </div>
</div>

  <div class="row">
    <% @dogs.each do |dog| %>
      <div class="col-md-6 col-sm-12">
        <%= render 'card', dog: dog %>
      </div>
    <% end %>
  </div>
</div>
