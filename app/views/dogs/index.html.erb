<div class="container">
  <div data-controller="toggle_filter">
    <button data-action="click->toggle#fire" class="btn btn-outline-primary">Filter <i class="fa-solid fa-filter"></i></button>
    <div data-toggle-target="togglableElement" class="d-none">
      <%= render "form" %>
    </div>
  </div>
</div>

  <div class="row">
    <% @dogs.each do |dog| %>
      <div class="col-md-6 col-sm-12">
        <%= render 'card', dog: dog %>
      </div>
    <% end %>
  </div>
</div>
